<div class="container text-center">
<h2>  Hi there, <%= current_user.firstname %> </h2>

  <%= form_for(@post) do |form| %>
    <%= form.label :"what's on your mind?" %><br>
    <%= form.text_area :message, :cols => "60", :rows => "4" %>
  <p>
    <%= form.submit "Post" %>
  <% end %>

  <% @posts.each.reverse_each do |post| %>
  <div class="card border-primary mb-3" style="width: 18rem;">
    <div class="card-body">
        <p class="card-text"><%= post.message %></p>
        <h6 class="card-subtitle mb-2 text-muted"><%= post.created_at.in_time_zone("London").strftime("%H:%M %b %d, %Y") %></h6>
        <a href="#" class="card-link"><%= link_to post.user.firstname, post.user %></a>
    </div>
  </div>
  <% end %>



