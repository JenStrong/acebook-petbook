<div class="card" id="profile-box" style="width: 18rem;">
  <h1>
    Welcome, <%= @user.firstname %>
  </h1>
  <div class="text-center">
    <div class="avatar">
      <%= image_tag @user.avatar.url(:profile), :class => "profile_pic" if @user.avatar? %>
    </div>
    <div class="upload-photo">
      <% if current_user == @user %>
        <%= form_for(current_user, html: { multipart: true }) do |f| %>
          <p>Update profile pic:</p>
      <p>
          <span class="avatar">
            <%= f.file_field :avatar %>
            <%= f.submit "Update", class: "btn btn-primary" %>
          </span>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="card-body">
    <h5 class="card-title">Profile:</h5>
    <p class="card-text"> Type of Animal: <%= @user.animal %> </p>
    <p class="card-text"> Age: <%= @user.age %> </p>
    <p class="card-text"> Owner: <%= @user.owner %> </p>
    <% if current_user == @user %>
      <p><%= link_to "Edit profile", edit_user_path(current_user) %></p>
    <% end %>
  </div>
</div>
